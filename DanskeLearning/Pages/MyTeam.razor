@page "/MyTeam"
@using Core.Models

<h3>Customer Supporter</h3>

@if (teamMembers == null)
{
    <p>Loading...</p>
}
else if (teamMembers.Count == 0)
{
    <p>No team members found.</p>
}
else
{
    <div class="subject-buttons-container">
        @foreach (var u in teamMembers)
        {
            <MyTeamUsersComponent user="@u" />
        }
    </div>
}

