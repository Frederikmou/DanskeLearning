@using Core.Models
@inject NavigationManager nav

<div class="article-card @(IsRead ? "read" : "")" @onclick="@OpenArticle">
    @Article.title
</div>

@code {
    [Parameter] public Articles Article { get; set; }
    [Parameter] public bool IsRead { get; set; }

    private void OpenArticle()
    {
        nav.NavigateTo($"/ArticleDetails/single/{Article.articleId}");
    }
}