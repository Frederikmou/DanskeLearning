@using DanskeLearning.Services.UserSessionService
@inject NavigationManager NavManager
@inject IUserSessionService UserSession

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DanskeLearning</a>

        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="nav flex-column">

        <button class="btn btn-nav mb-2" @onclick="@(() => NavManager.NavigateTo("/"))">
            Home
        </button>

        <button class="btn btn-nav mb-2" @onclick="@(() => NavManager.NavigateTo("/counter"))">
            Counter
        </button>

        <button class="btn btn-nav mb-2" @onclick="@(() => NavManager.NavigateTo("/weather"))">
            Weather
        </button>

        <!-- 💡 INTET login her længere – det ligger i MainLayout -->
    </nav>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await UserSession.InitializeAsync();
        UserSession.OnChange += HandleStateChanged;
    }

    private void HandleStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public void Dispose()
    {
        UserSession.OnChange -= HandleStateChanged;
    }
}

